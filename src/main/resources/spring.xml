<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <import resource="loggers.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
    </bean>

    <bean id="app" class="com.gerkir.spring.App" autowire="constructor" scope="singleton">
        <!--<constructor-arg ref="client"/>-->
        <constructor-arg ref="cashFileLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="logger"/>
                <entry key="ERROR" value-ref="combineLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="event" class="com.gerkir.spring.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="client" class="com.gerkir.spring.beans.Client" scope="singleton">
        <property name="greeting" value="${greeting}"/>
        <constructor-arg value="${id}"/>
        <constructor-arg index="1" value="${name}"/>
    </bean>

</beans>