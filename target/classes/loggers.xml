<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="logger" class="com.gerkir.spring.loggers.ConsoleEventLogger"/>


    <bean id="fileLogger" class="com.gerkir.spring.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/logs.txt"/>
    </bean>

    <bean id="cashFileLogger" class="com.gerkir.spring.loggers.CacheFileEventLogger" parent="fileLogger" destroy-method="destroy">
        <!--<constructor-arg value="target/logs.txt"/>-->
        <constructor-arg value="1"/>
    </bean>
    
    <bean id="combineLogger" class="com.gerkir.spring.loggers.CombinedEventLogger">

        <constructor-arg>
            <list>
                <ref bean="logger"/>
                <ref bean="fileLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>